{
  "compilerOptions": {
    "rootDir": "./server",                // Set rootDir to include both src and testing
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "server/src/**/*.ts",                // Include source files
    "server/testing/**/*.ts"             // Include test files
  ],
  "exclude": ["node_modules", "dist"]
}
